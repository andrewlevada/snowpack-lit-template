{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~services/*": ["./src/services/*"],
      "~components/*": ["./src/components/*"],
      "~utils/*": ["./src/utils/*"],
      "~assets/*": ["./assets/*"],
      "~src/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
  },
}
